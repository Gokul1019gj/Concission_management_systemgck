$( "#form" ).validate({
  rules: {
    name: {
      required: true,
      minlength: 3,
      maxlength:20
    },
    
    department:{
      required:true
    },
    semester:{
      required: true
    },
    acadamicyear:{
      required: true
    }

  }
 
});
</script>