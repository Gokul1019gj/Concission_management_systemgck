<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>


<div class="row">
    <div class="container pl-5">
        <div class="col-md-6 m-auto mt-5">
            <h2 class="text-center">FORM FOR COURSE CERTIFICATE</h2>

            <form id="form" action="/coursedata" method="post">
            

                <div class="form-group">
                    <label for="exampleInputEmail1">NAME:</label>
                    <input name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="name">
                    
                </div><br>
                <div class="form-group">
                    <label for="">DEPARTMENT:</label>
                    <select name="department" id="">
                        <option value="">select</option>
                        <option value="Cs">CS</option>
                         <option value="Pca">PCA</option>
                          <option value="Bc">BC</option>
                           <option value="Bt">BT</option>
                            <option value="Stat">STAT</option>
                             <option value="Geo">GEO</option>
                             <option value="Ic">IC</option>
                    </select>
                </div><br>
                <div class="form-group">
                    <label for="">SEMESTER:</label>
                    <select name="semester" id="">
                        <option value="">select</option>
                        <option value="s1">S1</option>
                         <option value="s2">S2</option>
                          <option value="s3">S3</option>
                           <option value="s4">S4</option>
                            <option value="s5">S5</option>
                             <option value="s6">S6</option>
                    </select>
                </div><br>
                <div class="form-group">
                    <label for="">ACCADEMIC YEAR</label>
                    <input type="text" name="acadamicyear" class="form-control">
                    <input hidden type="text" name="ccaprove" value="w">
                     <input hidden type="text" name="statuss" value="">
                </div>
                <br>
                
                <div class="text-center"><button onclick="return window.alert('submitted')" type="submit" class="btn btn-primary mt-3 ">SUBMIT</button></div>
                
                
            </form>

        </div>
    </div>
</div>

<script>
// just for the demos, avoids form submit
